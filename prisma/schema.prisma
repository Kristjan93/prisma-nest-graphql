//   name         String
//   medicalFoods MedicalFood[]
// }

model Company {
  id           Int           @id @default(autoincrement())
  name         String        @unique
  medicalFoods MedicalFood[]
}

model Medicine {
  id   Int    @id @default(autoincrement())
  name String

  petId String
  pet   Pet    @relation(fields: [petId], references: [id])
}

model Hospital {
  id          Int     @id @default(autoincrement())
  name        String  @unique
  address     String
  city        String
  latitude    String
  longitude   String
  phoneNumber String
  postcode    String
  website     String?

  vaccinations Vaccination[]
  surgeries    Surgery[]
  dewormings   Deworming[]
}
